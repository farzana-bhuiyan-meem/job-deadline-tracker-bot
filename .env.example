# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_USER_ID=your_telegram_user_id_for_security

# Ollama Configuration (Local LLM - No API key needed)
# Ollama runs locally with llama3.2 model
# Install: https://ollama.com/download
# Run: ollama pull llama3.2

# Jina AI Reader API (Optional - has free tier without key)
JINA_API_KEY=your_jina_api_key_optional

# Google Sheets API
GOOGLE_SHEETS_CREDENTIALS=credentials.json
GOOGLE_SHEET_ID=your_google_sheet_id

# Timezone Configuration
USER_TIMEZONE=Asia/Dhaka

# Optional: Logging Level
LOG_LEVEL=INFO
